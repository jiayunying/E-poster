<Page x:Class="E_Poster.PaperList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:E_Poster"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="PaperList" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="ListBox" x:Key="style_listbox">
            <Setter  Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Grid>

                            <Border>
                                <ScrollViewer BorderBrush="Transparent">
                                    <UniformGrid IsItemsHost="True" Columns="1"></UniformGrid>
                                    <!--<StackPanel IsItemsHost="True"/>-->
                                </ScrollViewer>
                            </Border>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="AliceBlue"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="border" CornerRadius="10" Margin="5" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter Property="Background" TargetName="border" Value="Blue"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" TargetName="border" Value="White"/>
                                            <Setter Property="Foreground" Value="Red"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="listBoxTemplate">
            <StackPanel Margin="4">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontWeight="Bold" Text="城市名称：" DockPanel.Dock="Left" Margin="5,0,10,0"/>
                        <TextBlock Text=" " Grid.Column="1"/>
                        <TextBlock Grid.Column="2" Text="{Binding ProvinceName}" Foreground="Green" FontWeight="Bold"/>
                    </Grid>

                <DockPanel >
                    <TextBlock FontWeight="Bold" Text="创建日期：" DockPanel.Dock="Left" Margin="5,0,5,0"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding DateCreated}" Foreground="DarkOrange"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text=" "/>
                    <TextBlock Text=" "/>
                    <TextBlock FontWeight="Bold" Text="测试项目：" DockPanel.Dock="Left" />
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding DataTest}" Foreground="DarkOrange"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold" Text="更新日期：" DockPanel.Dock="Left" Margin="5,0,5,0"/>
                    <TextBlock Text=" "/>
                    <TextBlock Text="{Binding DateUpdated}" Foreground="Cyan"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="342*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click_1" Grid.Row="0"  Width="54" Height="54" Visibility="Visible" Panel.ZIndex="10">
            <Button.Template>
                <ControlTemplate>
                    <Rectangle Margin="2">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/resources/search.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <StackPanel  HorizontalAlignment="Left"  Name="Thumb1" VerticalAlignment="Stretch" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Width="Auto" CanVerticallyScroll="True" Panel.ZIndex="10">
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="spt1"></TranslateTransform>
            </StackPanel.RenderTransform>

            <StackPanel.Clip>
                <RectangleGeometry x:Name="spc1"></RectangleGeometry>

            </StackPanel.Clip>
            <Grid>
                <Grid.RowDefinitions>
                    
                </Grid.RowDefinitions>
                <ListBox Name="typeList" DisplayMemberPath="TypeName" SelectedValuePath="ID" Width="500" VerticalAlignment="Stretch" Background="#2B323A" Foreground="White">
                </ListBox>
            </Grid>

        </StackPanel>




        <Image x:Name="banner" Grid.Row="0" Grid.ColumnSpan="2" Stretch="Fill"/>


        <ListBox Grid.Row="1" Name="listBox1" Grid.ColumnSpan="2"  ItemsSource="{Binding Tables[0]}" 
                 ItemTemplate="{StaticResource listBoxTemplate}" Background="Transparent" SelectionChanged="ListBox1_SelectionChanged"/>
        <!--翻页按钮 --> 
        <Button x:Name="Left"   HorizontalAlignment="Left"  Grid.Row="1" Grid.ColumnSpan="2" Width="95" Height="95" Visibility="Visible" Margin="12,0,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Rectangle Margin="2">
                        <Rectangle.Fill>
                            <ImageBrush x:Name="Last_Imgbrush" ImageSource="pack://application:,,,/resources/left.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Right"   HorizontalAlignment="Right"  Grid.Row="1" Grid.ColumnSpan="2" Width="95" Height="95" Visibility="Visible"  Margin="0,0,12,0">
            <Button.Template>
                <ControlTemplate>
                    <Rectangle Margin="2">
                        <Rectangle.Fill>
                            <ImageBrush x:Name="Next_Imgbrush" ImageSource="pack://application:,,,/resources/right.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Image x:Name="bottom" Grid.Row="2" Grid.ColumnSpan="2" Stretch="None"/>
       
    </Grid>
</Page>
